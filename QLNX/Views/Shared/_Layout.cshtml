    <link href="~/Assets/Admin/Css/fontawesome-free/css/all.min.css" rel="stylesheet" />

    <!-- Custom Stylesheets -->
    <link rel="stylesheet" href="~/Assets/User/Css/style.css">
    <link rel="stylesheet" id="cpswitch" href="~/Assets/User/Css/orange.css">
    <link rel="stylesheet" href="~/Assets/User/Css/responsive.css">

    <!-- Flex Slider Stylesheet -->
    <link rel="stylesheet" href="~/Assets/User/Css/flexslider.css" type="text/css" />

    <!--Date-Picker Stylesheet-->
